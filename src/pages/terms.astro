  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section {
    padding: 4rem 0;
  }

  .content {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-top: -2rem;
    position: relative;
  }

  .intro-box {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-left: 4px solid var(--primary);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 3rem;
  }

  .intro-box p {
    margin: 0;
    line-height: 1.8;
    font-size: 1.05rem;
  }

  .content h2 {
    color: var(--primary);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border);
    font-size: 1.75rem;
  }

  .content h2:first-of-type {
    margin-top: 0;
  }

  .content h3 {
    color: var(--secondary);
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .content p {
    line-height: 1.8;
    margin-bottom: 1.25rem;
    color: var(--text);
  }

  .content ul {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .content li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }

  .content li strong {
    color: var(--text);
  }

  .content a {
    color: var(--primary);
    text-decoration: underline;
  }

  .content a:hover {
    color: var(--primary-dark);
  }

  .contact-box {
    background: var(--bg-gray);
    padding: 2rem;
    border-radius: 8px;
    border: 2px solid var(--border);
    margin: 2rem 0;
  }

  .contact-box p {
    margin-bottom: 0.75rem;
  }

  .contact-box p:last-child {
    margin-bottom: 0;
  }

  .footer-note {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border);
    font-size: 0.95rem;
    color: var(--text-light);
  }

  .footer-note p {
    margin-bottom: 0.75rem;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .content {
      padding: 2rem 1.5rem;
    }

    .content h2 {
      font-size: 1.5rem;
    }

    .content h3 {
      font-size: 1.2rem;
    }
  }
